<script>
  $(function() {
    $('textarea#froala-editor').froalaEditor()
  });
</script>
<div class="well">
	<h1>Add Post</h1>
	<%= form_for [:admin,@post] do |f| %>
	<!--check for errors in the article-->
	<% if @post.errors.any? %>
	<% @category.errors.full_massages.each do |msg| %>
	<!--show all the errors-->
	<div class="alert alert-danger"><%= msg %></div>
		<% end %>
	<% end %>

	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :category %>
		<%= f.select :category_id, Category.all.collect{|x| [x.name, x.id]}, {:include_blank => 'select one'}, class: 'form-control' %>
	</div>

	<div class="form-group">
	<%= f.label :Author %>
	<%= f.select :user_id, User.all.collect{|x| [x.name, x.id]}, {:include_blank => 'select one'}, class:'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :image %>
		<%= f.file_field :image %>
	</div>

	<div class="form-group">
		<%= f.label :tags %>
		<%= f.text_area :tags ,class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :body %>
		<%= f.text_area :body ,class: 'form-control', id: 'froala-editor' %>
	</div>

	<br>
	<%= f.submit "Submit", class: 'btn btn-primary' %>
	<%= link_to "Cancel", admin_posts_path, class: 'btn btn-defualt'  %>
	<% end %>
</div>