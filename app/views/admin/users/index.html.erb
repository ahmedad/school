<div class="well">
<h2 class="page-header">user <%= link_to "Create New", new_admin_user_path, class: 'btn btn-success pull-right' %></h2>
	<% if @users.exists? %>
	<table class="table table-striped">
	 <tr>
	 	<th>Name</th>
	 	<th>Email</th>
	 	<th>Date created</th>
	 	<th>Action</th>
	</tr>
	<% @users.each do |user| %>
	<tr>
	 	<td><%= user.name %></td>
	 	<td><%= user.email %></td>
	 	<td><%= user.created_at.to_time.strftime('%B %e at %l %m %p') %></td>
	 	<td>
	 	 	<%= link_to "Edit", edit_admin_user_path(user), class: 'btn btn-primary' %>
	 	 	<%= link_to "Delete", admin_user_path(user), method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure'} %>
	 	</td>	
	 </tr>
	 <% end %>
	</table>
	<%= will_paginate @posts %>
	<% else %>
   		<p>There is no user </p>
   <% end %>

</div>
